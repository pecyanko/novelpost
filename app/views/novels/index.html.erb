<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「人生を変えるフリマアプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      人生を変える小説を
    </h2>

    <div class='store-btn'>

    </div>
  </div>
  <%# /画面上部の「人生を変えるフリマアプリ」帯部分  %>


  <%# FURIMAの特徴 %>

  <%# /FURIMAの特徴 %>

  <%# 商品一覧 %>
  <div class='item-contents'>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
            <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
    <h2 class='title'>小説一覧</h2>
    <div class="subtitle" >
      新規投稿小説レビュー
    </div>
    <ul class='item-lists'>
      <% @novels.each do |novel|%>

        <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
       <li class='list'>
          <%= link_to "/novels/#{novel.id}" do %>
          <div class='item-img-content'>
           <%= image_tag novel.image, class: "item-img" %>
         </div>
         <div class='item-info'>
           <h3 class='item-name'>
             <%= novel.title %>
           </h3>
           <div class='item-price'>
             <span><%= novel.author %><br></span>
             <div class='star-btn'>
               <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
              </div>
           </div>
         </div>
         <% end %>
       </li>
      <% end %>
      
      <%# //商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>

      <%# 商品がない場合は以下のダミー商品が表示されるようにしましょう %>
      <%# 商品がある場合は表示されないようにしましょう %>

      <%# //商品がある場合は表示されないようにしましょう %>
      <%# //商品がない場合は以下のダミー商品が表示されるようにしましょう %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
<%= link_to(new_novel_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'book-icon.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>